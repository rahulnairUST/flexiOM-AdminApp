<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
<VBox class="sapUiSmallMargin">
	<f:SimpleForm id="idDisplayPlanningScreenSettingsForm" editable="true" layout="ResponsiveGridLayout" title="{i18n>planningScreenSettings}"
		singleContainerFullSize="true">
		<f:toolbar>
		<Toolbar>
			<Title text="{i18n>planningScreenSettings}"/>
			<ToolbarSpacer />
			<Button icon="sap-icon://edit" text="{i18n>editBtn}" tooltip="{i18n>editBtn}" press="onEditPlnScrSetPressed"/>
		</Toolbar>
		</f:toolbar>
		<f:content>
			<Label text="{i18n>planningScreenDesc}" tooltip="{i18n>planningScreenDesc}"/>
			<Text text="{planningSettings>/PlanningScreen}"/>
			<Label text="{i18n>allocationObject}" tooltip="{i18n>allocationObject}"/>
			<Text text="{planningSettings>/ProductAllocationObject}"/>
			<Label text="{i18n>bucketDisplay}" tooltip="{i18n>bucketDisplay}"/>
			<Text text="{planningSettings>/BuckDispFormat}"/>	
			<Label text="{i18n>XLSImport}" tooltip="{i18n>XLSImport}"/>
			<Switch type="AcceptReject" state="{planningSettings>/ExcelImport}" enabled="false"/>
			<Label text="{i18n>collapseButton}" tooltip="{i18n>collapseButton}"/>
			<Switch type="AcceptReject" state="{planningSettings>/ButtonCvcCollapse}" enabled="false"/>
			<Label text="{i18n>pagingButton}" tooltip="{i18n>pagingButton}"/>
			<Switch type="AcceptReject" state="{planningSettings>/ButtonCvcPaging}" enabled="false"/>	
			<Label text="{i18n>wrCVCStatusLog}" tooltip="{i18n>wrCVCStatusLog}"/>
			<Switch type="AcceptReject" state="{planningSettings>/CvcStatusLogWrite}" enabled="false"/>
			<Label text="{i18n>wrTimeSeriesLog}" tooltip="{i18n>wrTimeSeriesLog}"/>
			<Switch type="AcceptReject" state="{planningSettings>/TimeseriesLogWrite}" enabled="false"/>
			<Label text="{i18n>cvcLogDisplay}" tooltip="{i18n>bucketDisplay}"/>
			<Text text="{planningSettings>/CvcLogDisplay}"/>
			<Label text="{i18n>traceDisplay}" tooltip="{i18n>traceDisplay}"/>
			<Text text="{planningSettings>/TraceDisplay}"/>
			<Label text="{i18n>cvcStatusChngDisplay}" tooltip="{i18n>cvcStatusChngDisplay}"/>
			<Text text="{planningSettings>/TraceDisplay}"/>
			<Label text="{i18n>cvcStatusChange}" tooltip="{i18n>cvcStatusChange}"/>
			<Text text="{planningSettings>/CvcStatusChange}"/>
			<Label text="{i18n>refreshButton}" tooltip="{i18n>refreshButton}"/>
			<Switch type="AcceptReject" state="{planningSettings>/ButtonRefresh}" enabled="false"/>
			<Label text="{i18n>draftDisplay}" tooltip="{i18n>draftDisplay}"/>
			<Text text="{planningSettings>/DraftDisplay}"/>
			<Label text="{i18n>multiUserDrafts}" tooltip="{i18n>multiUserDrafts}"/>
			<Switch type="AcceptReject" state="{planningSettings>/DraftMultiUser}" enabled="false"/>
			<Label text="{i18n>allowNotes}" tooltip="{i18n>allowNotes}"/>
			<Text text="{planningSettings>/AllowNotes}"/>
			<Label text="{i18n>consumptionView}" tooltip="{i18n>consumptionView}"/>
			<Text text="{planningSettings>/ConsumptionView}"/>
			<Label text="{i18n>addRemoveCVC}" tooltip="{i18n>addRemoveCVC}"/>
			<Switch type="AcceptReject" state="{planningSettings>/AllowNotes}" enabled="false"/>
			<Label text="{i18n>salesOrderViewBtn}" tooltip="{i18n>salesOrderViewBtn}"/>
			<Switch type="AcceptReject" state="{planningSettings>/SalesOrderView}" enabled="false"/>
			<Label text="{i18n>userSettings}" tooltip="{i18n>userSettings}"/>
			<Switch type="AcceptReject" state="{planningSettings>/UserSettings}" enabled="false"/>
		</f:content>
	</f:SimpleForm>
</VBox>
</core:FragmentDefinition>